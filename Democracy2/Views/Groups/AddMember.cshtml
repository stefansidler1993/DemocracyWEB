@model Democracy2.Models.AddMemberView

@{
    ViewBag.Title = "AddMember";
}

<h2>Add member to group</h2>
<h3>@ViewBag.Error</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Voting</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.GroupId)


        <div class="form-group">
            @Html.LabelFor(model => model.UserId, "User", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserId", "Select an User...")
                @Html.ValidationMessageFor(model => model.UserId)
            </div>
        </div>


       


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Member" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { }, new { @class=" btn btn-success"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
